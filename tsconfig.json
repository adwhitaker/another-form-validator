{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
        "es5",
        "es2015",
        "es2015.promise",
        "es2016",
        "es2017.object",
        "esnext.asynciterable"
      ],
      "declaration": true,
      "outDir": "./dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "strictNullChecks": false,
      "target": "ES5"
    },
    "exclude": [
      "./node_modules",
      "./src/tests/**/*.ts",
      "./dist/**/*",
      "./exec.ts"
    ],
    "include": [
      "./src/index.ts",
    ]
  }